#compdef fzfmenu

# Save this file as _stor in /usr/local/share/zsh/site-functions or in any
# other folder in $fpath.  E.g. save it in a folder called ~/.zfunc and add a
# line containing `fpath=(~/.zfunc $fpath)` somewhere before `compinit` in your
# ~/.zshrc.

__fzfmenu() {
	_arguments -s \
		{-v,--version}'[Print version]' \
		{-h,--help}'[Print help]' \
		{-c,--config}'[Set configuraton file]:filename:_files' \
		{-l,--list-plugins}'[List all plugins]' \
		{-t,--terminal}'[Override terminal]' \
		{-q,--query}'[Set query]' \
		'-o[Override terminal arguments]' \
		'-O[Override fzf arguments]'
}

__fzfmenu "$@"
